{
  "_comment": "Brand configuration template for workspace dashboards",
  "_purpose": "Define brand colors, typography, and visual style for dashboards",
  "workspace": "example-workspace",
  "version": "1.0",
  "brand": {
    "displayName": "Example Workspace",
    "colors": {
      "primary": "#6200ee",
      "primaryVariant": "#3700b3",
      "secondary": "#03dac6",
      "secondaryVariant": "#018786",
      "accent": "#ff6f00",
      "background": "#ffffff",
      "surface": "#ffffff",
      "surfaceVariant": "#f5f5f5",
      "onPrimary": "#ffffff",
      "onSecondary": "#000000",
      "onBackground": "#000000",
      "onSurface": "#000000",
      "error": "#b00020",
      "warning": "#ffc107",
      "success": "#4caf50",
      "info": "#2196f3"
    },
    "gradient": {
      "primary": "linear-gradient(135deg, #6200ee 0%, #3700b3 100%)",
      "secondary": "linear-gradient(135deg, #03dac6 0%, #018786 100%)",
      "accent": "linear-gradient(135deg, #ff6f00 0%, #6200ee 100%)"
    },
    "typography": {
      "fontFamily": "'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "headingFont": "'Roboto', sans-serif",
      "fontSizeBase": "16px",
      "lineHeightBase": "1.5"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "xxl": "48px"
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "16px",
      "xl": "24px"
    }
  },
  "notes": {
    "location": "Place this file in workspaces/[workspace-name]/brand-config.json",
    "override": "Project-level brand-config.json can override workspace-level configuration",
    "fallback": "If not found, uses default Material Design theme"
  }
}

